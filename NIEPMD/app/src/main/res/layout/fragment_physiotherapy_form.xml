<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/application_background"
        android:scaleX="2"
        android:scaleY="3"
        android:layout_marginEnd="100dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/state_emblem_of_india" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/title"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleX="1.7"
                    android:scaleY="1.7"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/ic_launcher_foreground"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="83dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/background_container"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="15dp" >

                <TextView
                    android:id="@+id/physiotherapyFormTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Physiotherapy Form"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/c1"
                    android:textSize="27sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/patientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/physiotherapyFormTitle"
                    android:layout_marginTop="20dp"
                    android:hint="Patient Name" />

                <EditText
                    android:id="@+id/patientAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/patientName"
                    android:layout_marginTop="15dp"
                    android:hint="Patient Age" />

                <EditText
                    android:id="@+id/diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/patientAge"
                    android:layout_marginTop="15dp"
                    android:hint="Diagnosis" />

                <Spinner
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/diagnosis"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/postureSpecialization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gender"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/gait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/postureSpecialization"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Gait" />

                <Spinner
                    android:id="@+id/muscleOneSpecialization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gait"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/involuntaryMovements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/muscleOneSpecialization"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Involuntary" />

                <Spinner
                    android:id="@+id/nutrionalStatusOfMuscles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/involuntaryMovements"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/bulkAndGirthOfMuscles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nutrionalStatusOfMuscles"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Buld and Girth of Muscles" />

                <EditText
                    android:id="@+id/jointRangeOfMotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bulkAndGirthOfMuscles"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Joint Range of Muscles" />

                <EditText
                    android:id="@+id/musclePower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jointRangeOfMotion"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Muscle Power" />

                <Spinner
                    android:id="@+id/contractureAndDeformity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/musclePower"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/limpLengthDiscrepancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contractureAndDeformity"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Limp Length Discrepancy" />

                <EditText
                    android:id="@+id/developmentReflexesMoro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/limpLengthDiscrepancy"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Moro" />

                <EditText
                    android:id="@+id/galant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/developmentReflexesMoro"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Galant" />

                <EditText
                    android:id="@+id/rooting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/galant"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Rooting" />

                <EditText
                    android:id="@+id/sucking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rooting"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Sucking" />

                <EditText
                    android:id="@+id/atnr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sucking"
                    android:layout_marginTop="15dp"
                    android:hint="Asymmetrical Tonic Neck Reflex" />

                <EditText
                    android:id="@+id/sntr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/atnr"
                    android:layout_marginTop="15dp"
                    android:hint="Symmetrical Tonic Neck Reflex" />

                <EditText
                    android:id="@+id/extensorThrust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sntr"
                    android:layout_marginTop="15dp"
                    android:hint="Extensor Thrust" />

                <EditText
                    android:id="@+id/tonyLabryinthReflex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/extensorThrust"
                    android:layout_marginTop="15dp"
                    android:hint="Tony Labryinth Reflex" />

                <EditText
                    android:id="@+id/righitingReflection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tonyLabryinthReflex"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Righiting Reflection" />

                <EditText
                    android:id="@+id/eqilibriumReaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/righitingReflection"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Eqilibrium Reaction" />

                <EditText
                    android:id="@+id/balanceReaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eqilibriumReaction"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Balance" />

                <TextView
                    android:id="@+id/motorFunctions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/balanceReaction"
                    android:text="Motor Functions"
                    android:textColor="@color/c1"
                    android:textSize="27dp"
                    android:textStyle="bold" />

                <CheckBox android:id="@+id/supine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/motorFunctions"
                    android:text="Supine"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/prone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/supine"
                    android:text="Prone"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/sitting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/prone"
                    android:text="Sitting"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/standing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sitting"
                    android:text="Standing"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/running"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/standing"
                    android:text="Running"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/rolling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/running"
                    android:text="Rolling"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/commingToSitting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rolling"
                    android:text="Comming To Sitting"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/crawling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/commingToSitting"
                    android:text="Crawling"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/walking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crawling"
                    android:text="Walking"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/standingOnLeg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/walking"
                    android:text="Standing On Leg"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/climbingUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/standingOnLeg"
                    android:text="Climbing Up"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/climbingDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/climbingUp"
                    android:text="Climbing Down"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/reachForward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/climbingDown"
                    android:text="Reach Forward"
                    android:textColor="@color/c1"
                    android:textSize="27dp"
                    android:textStyle="bold" />

                <CheckBox android:id="@+id/sideWays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reachForward"
                    android:text="Side Ways"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/backwards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sideWays"
                    android:text="Backwards"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/verticals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/backwards"
                    android:text="Verticals"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <CheckBox android:id="@+id/upwards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/verticals"
                    android:text="Upwards"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/unilateralTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/upwards"
                    android:layout_marginTop="20dp"
                    android:text="Intially It is Unilateral Then Child learns Bilateral Control"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/unilateral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/unilateralTitle"
                    android:layout_marginTop="15dp"
                    android:hint="Enter Unilateral" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/unilateral"
                    android:layout_marginTop="15dp"
                    android:background="@color/c4"
                    android:textColor="@color/white"
                    android:text="Add"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>