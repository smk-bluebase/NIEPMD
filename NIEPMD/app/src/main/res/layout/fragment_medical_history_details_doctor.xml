<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/application_background"
        android:scaleX="2"
        android:scaleY="3"
        android:layout_marginEnd="100dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/state_emblem_of_india" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/title"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleX="1.7"
                    android:scaleY="1.7"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/ic_launcher_foreground"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="83dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/background_container"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="15dp" >

                <TextView
                    android:id="@+id/medicalHistoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Medical History"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/c1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:id="@+id/personalDetailsTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/medicalHistoryTitle"
                    android:padding="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#000000">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="0.2"
                            android:background="@color/lightGray"
                            android:layout_marginRight="2dp"
                            android:gravity="left"
                            android:text="Patient Name"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/purple" />

                        <TextView
                            android:id="@+id/patientName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="1"
                            android:background="@color/lightGray"
                            android:gravity="left"
                            android:text=""
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="0.2"
                            android:background="@color/white"
                            android:layout_marginRight="2dp"
                            android:gravity="left"
                            android:text="Patient Email"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/purple" />

                        <TextView
                            android:id="@+id/patientEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="left"
                            android:text=""
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="0.2"
                            android:background="@color/lightGray"
                            android:layout_marginRight="2dp"
                            android:gravity="left"
                            android:text="Phone"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/purple" />

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="1"
                            android:background="@color/lightGray"
                            android:gravity="left"
                            android:text=""
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="0.2"
                            android:background="@color/white"
                            android:layout_marginRight="2dp"
                            android:gravity="left"
                            android:text="Patient Address"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/purple" />

                        <TextView
                            android:id="@+id/patientAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="left"
                            android:text=""
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="0.2"
                            android:background="@color/lightGray"
                            android:layout_marginRight="2dp"
                            android:gravity="left"
                            android:text="Patient Gender"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/purple" />

                        <TextView
                            android:id="@+id/patientGender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="1"
                            android:background="@color/lightGray"
                            android:gravity="left"
                            android:text=""
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="0.2"
                            android:background="@color/white"
                            android:layout_marginRight="2dp"
                            android:gravity="left"
                            android:text="Patient Age"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/purple" />

                        <TextView
                            android:id="@+id/patientAge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="left"
                            android:text=""
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="0.2"
                            android:background="@color/lightGray"
                            android:layout_marginRight="2dp"
                            android:gravity="left"
                            android:text="Patient Medical \nHistory"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/purple" />

                        <TextView
                            android:id="@+id/patientMedicalHistory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="1"
                            android:background="@color/lightGray"
                            android:gravity="left"
                            android:text=""
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="0.2"
                            android:background="@color/white"
                            android:layout_marginRight="2dp"
                            android:gravity="left"
                            android:text="Patient Reg Date"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/purple" />

                        <TextView
                            android:id="@+id/patientRegDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="left"
                            android:text=""
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>

                    </TableRow>

                </TableLayout>

                <TextView
                    android:id="@+id/bodyVitalsHistoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/personalDetailsTable"
                    android:text="Body Vitals History"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/c1"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/bodyVitalsHistoryListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/bodyVitalsHistoryTitle"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>