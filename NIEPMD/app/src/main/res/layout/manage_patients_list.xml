<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/patientNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Name : "
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/purple" />

    <TextView
        android:id="@+id/patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----------------------"
        android:layout_toRightOf="@id/patientNameTitle"
        android:layout_marginLeft="10dp"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/contactNoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/patientName"
        android:text="Contact No : "
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/purple" />

    <TextView
        android:id="@+id/contactNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----------------------"
        android:layout_toRightOf="@id/contactNoTitle"
        android:layout_below="@id/patientName"
        android:layout_marginLeft="10dp"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/patientGenderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactNo"
        android:text="Patient Gender : "
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/purple" />

    <TextView
        android:id="@+id/patientGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----------------------"
        android:layout_toRightOf="@id/patientGenderTitle"
        android:layout_below="@id/contactNo"
        android:layout_marginLeft="10dp"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/creationDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/patientGender"
        android:text="Creation Date : "
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/purple" />

    <TextView
        android:id="@+id/creationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----------------------"
        android:layout_toRightOf="@id/creationDateTitle"
        android:layout_below="@id/patientGender"
        android:layout_marginLeft="10dp"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/updationDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/creationDate"
        android:text="Updation Date : "
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/purple" />

    <TextView
        android:id="@+id/updationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----------------------"
        android:layout_toRightOf="@id/updationDateTitle"
        android:layout_below="@id/creationDate"
        android:layout_marginLeft="10dp"
        android:textSize="10dp" />

</RelativeLayout>